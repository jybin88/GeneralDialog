<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="280dp"
              android:layout_height="wrap_content"
              android:background="@drawable/general_dialog_bg_shape"
              android:orientation="vertical"
              android:paddingBottom="8dp"
              android:paddingLeft="8dp"
              android:paddingRight="8dp"
              android:paddingTop="24dp"
              tools:ignore="RtlHardcoded,PrivateResource">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="#333333"
        android:textSize="17sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="2"
        android:paddingBottom="24dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="#333333"
        android:textSize="16sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dialog_left_button"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/general_dialog_btn_selector"
            android:gravity="center"
            android:textColor="#0090ff"
            android:textSize="17sp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_negative_button"
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:background="@drawable/general_dialog_btn_selector"
                android:gravity="center"
                android:textColor="#0090ff"
                android:textSize="17sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_dialog_positive_button"
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:background="@drawable/general_dialog_btn_selector"
                android:gravity="center"
                android:textColor="#0090ff"
                android:textSize="17sp"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>